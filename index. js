import fetch from "node-fetch";

export default async function handler(req, res) {
  if (req.method === "POST") {
    const data = req.body;

    if (data.message) {
      const chatId = data.message.chat.id;
      const text = data.message.text || "";

      let reply = "Hai, aku Veo3! ðŸ¤–\nAku bisa bantu bikin video 3D lucu dan realistis!";
      if (text === "/start") {
        reply = "Selamat datang di Veo3 Bot! ðŸŽ¬\nKetik 'bikin video' untuk mulai.";
      } else if (text.toLowerCase().includes("bikin video")) {
        reply = "Oke! Kirim deskripsi video yang kamu mau buat ðŸ˜„";
      }

      await fetch(`https://api.telegram.org/bot${process.env.BOT_TOKEN}/sendMessage`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ chat_id: chatId, text: reply }),
      });
    }

    return res.status(200).send("OK");
  }

  res.status(200).send("Bot aktif ðŸš€");
}
